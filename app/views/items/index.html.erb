<% content_for :title, "Items" %>

<div class="container px-1">
  <h4>Items <%= link_to image_tag('add.png', class: "button_icon", alt: 'New item'),
                          new_item_path,
                          data: { turbo_frame: dom_id(Item.new) } %>
  </h4>
  <%= turbo_frame_tag Item.new %>
  <%= turbo_frame_tag 'items-and-filter' do %>
    <%= render 'filter_form' %>
    <%= turbo_frame_tag 'items' do %>
      <%= render 'items_table' %>
    <% end %>
  <% end %>
</div>
